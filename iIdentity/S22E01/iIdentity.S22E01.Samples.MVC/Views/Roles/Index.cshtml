@model List<IdentityRole>

<a class="btn btn-success btn-lg mb-1" asp-controller="Roles" asp-action="Create">Create Role</a>

<table class="table table-responsive table-light table-bordered table-hover">

    <thead>
        <tr class="table-info">
            @*<th>Id</th>*@
            <th>Name</th>
            <th>NormalizedName</th>
            @*<th>ConcurrencyStamp</th>*@
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count <= 0)
        {
            <tr>
                <td colspan="3">There is no role in database.</td>
            </tr>
        }
        else
        {
            @foreach (var role in Model)
            {
                <tr>
                    @*<td>@role.Id</td>*@
                    <td>@role.Name</td>
                    <td>@role.NormalizedName</td>
                    @*<td>@role.ConcurrencyStamp</td>*@
                    <td class="text-center">
                        @*<form class="d-inline" asp-controller="Users" asp-action="Edit" method="get">
                            <input type="hidden" value="@user.Id" name="id">
                            <input type="submit" value="Edit" class="btn btn-sm btn-primary m-1">
                        </form>*@

                        <a class="btn btn-info btn-sm mb-1" asp-controller="Roles" asp-action="Details" asp-route-Id="@role.Id">Details</a>
                        <a class="btn btn-warning btn-sm mb-1" asp-controller="Roles" asp-action="Edit" asp-route-Id="@role.Id">Edit</a>
                        <a class="btn btn-danger btn-sm mb-1" asp-controller="Roles" asp-action="Delete" asp-route-Id="@role.Id">Delete</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>