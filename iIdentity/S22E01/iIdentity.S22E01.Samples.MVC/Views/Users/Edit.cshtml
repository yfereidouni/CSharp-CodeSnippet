@using iIdentity.S22E01.Samples.MVC.Models.AAA.Data
@model ApplicationUser

@{
    ViewData["Title"] = "Edit User";
}

<div class="">
    <h1 class="display-4">Edit User</h1>
    <p>User Information:</p>
</div>
<br />


<form asp-controller="Users" asp-action="Edit" method="post">
    
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control mb-1" type="text" name="id" value="@Model.Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input class="form-control mb-1" type="text" name="username" value="@Model.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control mb-1" type="text" name="email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label asp-for="SSN"></label>
        <input class="form-control mb-1" type="text" name="ssn" value="@Model.SSN" />
    </div>

    <input class="btn btn-success btn-lg mb-1" type="submit" value="Save" />
    <a class="btn btn-secondary btn-lg mb-1" asp-controller="Users" asp-action="Index">Cancel</a>

</form>