@model IdentityUser

@{
    ViewData["Title"] = "User Details";
}

<div class="">
    <h1 class="display-4">User Details</h1>
    <p>User Information:</p>
</div>

<br />

<div class="form-group">
    <label asp-for="Id"></label>
    <input class="form-control mb-1" type="text" name="Id" value="@Model.Id" readonly />
</div>

<div class="form-group">
    <label asp-for="UserName"></label>
    <input class="form-control mb-1" type="text" name="Username" value="@Model.UserName" readonly />
</div>

<div class="form-group">
    <label asp-for="Email"></label>
    <input class="form-control mb-1" type="email" name="Email" value="@Model.Email" readonly/>
</div>

<a class="btn btn-warning btn-lg mb-1" type="submit" asp-controller="Users" asp-action="Edit" asp-route-Id="@Model.Id">Edit</a>
<a class="btn btn-secondary btn-lg mb-1" asp-controller="Users" asp-action="Index">Back</a>
