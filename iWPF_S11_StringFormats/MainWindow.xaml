<Window x:Class="iWPF_S11_StringFormats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iWPF_S11_StringFormats"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtPrice" VerticalAlignment="Center"  Text="{Binding Path=money, StringFormat='N0' ,UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
