<Window x:Class="iWPF_S03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iWPF_S03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="rtbDescription" Margin="10" Grid.Row="0"/>
        <GridSplitter Grid.Row="1" BorderBrush="Gray" BorderThickness="0.5" HorizontalAlignment="Stretch"/>
        <Button Name="btnShow" Click="btnShow_Click" Grid.Row="2" Content="Show Details" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
