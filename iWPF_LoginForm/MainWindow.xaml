<Window x:Class="iWPF_LoginForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iWPF_LoginForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5">
            <Label FontSize="24" FontWeight="Bold">Useranem:</Label>
            <TextBox x:Name="txtUsername" FontSize="24"></TextBox>
            <Label FontSize="24" FontWeight="Bold">Useranem:</Label>
            <PasswordBox FontSize="24"></PasswordBox>
            <Button Margin="0 25 0 0" Height="90" FontSize="24" FontWeight="Bold" Click="Button_Click" >Login</Button>
        </StackPanel>
    </Grid>
</Window>
