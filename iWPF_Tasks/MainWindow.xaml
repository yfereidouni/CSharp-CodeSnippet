<Window x:Class="iWPF_Tasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iWPF_Tasks"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid Margin="10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"  Content="Download using Thread"  Name="MyButton" HorizontalAlignment="Left" VerticalAlignment="Top"  Click="MyButton_Click" Margin="10,10,0,0"/>
        <Button Grid.Row="0" Content="Download using async method"  Name="MyButton2" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="MyButton2_Click" Margin="10,37,0,20"/>
        <Button Grid.Row="0" Content="Show"  Name="MyButton3" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="MyButton3_Click" Margin="10,67,0,20"/>
        <WebBrowser x:Name="MyWebBrowser" Margin="10" Grid.Row="1"/>
    </Grid>
</Window>
